{
  "name": "node-course-project",
  "version": "1.0.0",
  "description": "Node.js course project",
  "main": "index.js",
  "author": "Alex Sokolov",
  "license": "MIT",
  "scripts": {
    "start": "rimraf ./dist && babel -d ./dist ./src -s && node ./dist/main.js",
    "dev": "node ./dev.js",
    "lint:js": "eslint ./src",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "babel-cli": "^6.23.0",
    "babel-core": "^6.23.1",
    "babel-preset-env": "^1.2.0",
    "fs-promise": "^2.0.0",
    "http-status-codes": "^1.1.6",
    "mime-types": "^2.1.14",
    "rimraf": "^2.6.1"
  },
  "devDependencies": {
    "babel-register": "^6.23.0",
    "eslint": "^3.17.0",
    "eslint-config-airbnb-base": "^11.1.1",
    "eslint-config-prettier": "^1.5.0",
    "eslint-plugin-import": "^2.2.0",
    "lint-staged": "^3.3.1",
    "pre-commit": "^1.2.2"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "pre-commit": "lint-staged",
  "lint-staged": {
    "*.js": "eslint"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "env": {
      "node": true
    }
  }
}
